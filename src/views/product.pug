extends layout/layout

block variables
  -var page_title = 'Триглав Амулет защитный Берегиня №10 Aztek'
  -var breadcrumbs_links = ['Главная', 'Каталог', 'Амулеты', 'Славянские амулеты', page_title]

block content

  include blocks/breadcrumbs
  
  section.section.product(itemscope itemtype="http://schema.org/Product")
    .container
      .product-head
        //картинки
        .product-slider.product-head__slider
          .product-slider__miniatures
            //small
            .product-slider__miniature
              .image.image_contain
                img(data-src="./img/image 60.jpg", alt="image" itemprop="image").lazyload
            //small
            .product-slider__miniature
              .image.image_contain
                img(data-src="./img/blog2.jpg", alt="image").lazyload
          .swiper-container 
            .swiper-wrapper
              //large
              .swiper-slide
                .image.image_contain(data-image-zoom) 
                  img(data-src="./img/image 60.jpg", alt="image").lazyload
              //large
              .swiper-slide
                .image.image_contain(data-image-zoom)
                  img(data-src="./img/blog2.jpg", alt="image").lazyload

        .product-head__content(itemprop="offers" itemscope itemtype="http://schema.org/Offer") 
          .product-head__article Арт. 18475338
          h1.product-head__title(itemprop="name") Триглав Амулет защитный Берегиня №10 Aztek
          .product-head__info-items
            a(href="#product-reviews" data-action="scroll_to_anchor").product-head__rating
              +rating-list()
              span 26 отзывов
              
                

            .availability-label.availability-label_true(itemprop="availability" href="http://schema.org/InStock")
              svg.icon
                use(xlink:href='./img/icons/icons.svg#check')
              span В наличии

            .availability-label.availability-label_false
              svg.icon
                use(xlink:href='./img/icons/icons.svg#box')
              span Под заказ
            
          .product-head__description(itemprop="description") 
            | Триглав олицетворяет творческую силу Сварога, законы Перуна и божественный Свет Семаргла. Он неусыпно следит за тремя царствами: Правью, Явью и Навью.
          
          form(action="#").product-head__to-cart 
            .product-head__pricing 
              meta(itemprop="price" content="2500.00")
              meta(itemprop="priceCurrency" content="RUB")
              .product-head__price 2500 ₽
              .product-head__old-price 3000 ₽
            
            //контейнер для кнопки
            .product-head__to-cart-button
              //любая кнопка
              //Все кнопки и их состояния на странице компоненты
              button.button.button_large.button_style-5
                span.button__inner.button__default 
                  span Под заказ

              //button.button.button_style-2.button_large.button_cart
                span.button__inner.button__default 
                  svg.icon
                    use(xlink:href='./img/icons/icons.svg#handbag')
                  span Добавить в корзину

            .product-calculator(data-custom-interaction)
              button(type='button').product-calculator__button.product-calculator__button_minus
                svg.icon 
                  use(xlink:href="./img/icons/icons.svg#minus")
              input(type="text" value='1' data-min='1').product-calculator__input
              button(type='button').product-calculator__button.product-calculator__button_plus
                svg.icon 
                  use(xlink:href="./img/icons/icons.svg#plus")
          
          .product-head__links 
            a(href="#").icon-link.icon-link_type-2.product-head__link
              svg(fill='none').icon
                use(xlink:href='./img/icons/icons.svg#heart')
              span В избранное
            a(href="#").icon-link.icon-link_type-2.product-head__link
