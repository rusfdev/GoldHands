                  img(src="#" data-src="./img/product-2.png" alt="image").lazyload

              .lk-order-preview__detail 
                //button
                a(href="#").button.button_style-2.button_large
                  span.button__inner.button__default 
                    span Отследить посылку
                    svg(style='stroke-width:2px;').icon
                      use(xlink:href='./img/icons/icons.svg#arrow-up-right')

