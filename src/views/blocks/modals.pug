                span.review-modal__rating-title Оцените товар
                .rating-selection
                  .rating-selection__stars
                    svg.icon.rating-selection__star
                      use(xlink:href='./img/icons/icons.svg#star')
                    svg.icon.rating-selection__star
                      use(xlink:href='./img/icons/icons.svg#star')
                    svg.icon.rating-selection__star
                      use(xlink:href='./img/icons/icons.svg#star')
                    svg.icon.rating-selection__star
                      use(xlink:href='./img/icons/icons.svg#star')
                    svg.icon.rating-selection__star
                      use(xlink:href='./img/icons/icons.svg#star')
                  input(type="text" name='' value='' hidden).rating-selection__input
            .form__element.mb-20.mb-sm-25
              .input
                input(type="text" required)
                label Ваше имя
            .form__element.mb-20.mb-sm-25
              .input
                input(type="email" required)
                label E-mail
            .form__element.mb-20.mb-sm-25
              .input
                textarea(required)
                label Текст отзыва
            .form__element.mb-20.mb-sm-25
              +checkbox('Отправляя отзыв, вы соглашаетесь с нашей <a href="#" class="color-dark">политикой обработки персональных данных<span class="color-red">*</span></a>', true)
            .form__element
              button.button.button_style-2.d-flex
                span.button__inner.button__default 
                  span Отправить

