.side-modal.mobile-nav#mobile-nav
  .side-modal__container.mobile-nav__container(data-scroll-lock-scrollable)
    .side-modal__head
      button(data-action="side_modal_close" aria-label='Закрыть мобильное меню').close-element.side-modal__close
        svg.icon
          use(xlink:href='./img/icons/icons.svg#close')
    .side-modal__content
      ul.mobile-nav__list 
        li.mobile-nav__item
          a(href="#location-modal" data-action='modal_open').icon-link.mobile-nav__icon-link
            svg.icon
              use(xlink:href='./img/icons/icons.svg#navigation-arrow')
            span Санкт-Петербург
      
      ul.mobile-nav__list 
        li.mobile-nav__item
          button(data-action="catalog-modal_open" aria-label='Открыть каталог').icon-link.mobile-nav__icon-link
            svg.icon
                use(xlink:href='./img/icons/icons.svg#dots-nine')
            span Каталог товаров
        li.mobile-nav__item
          a(href="#").icon-link.mobile-nav__icon-link
            svg(fill='none').icon
              use(xlink:href='./img/icons/icons.svg#heart')
            span Избранное
        li.mobile-nav__item
          a(href="#").icon-link.mobile-nav__icon-link
            svg.icon
              use(xlink:href='./img/icons/icons.svg#percent')
            span Распродажа

      ul.mobile-nav__list 
        li.mobile-nav__item
          a(href="#") Доставка и оплата
        li.mobile-nav__item
          a(href="#") Об “Gold Hands”
        li.mobile-nav__item
          a(href="#") Блог
        li.mobile-nav__item
          a(href="#") Вакансии
