mixin box(title, items, type)
  -var index = 0
  .catalog-block__box.col-sm-6.col-md-4.col-lg-3
    h4.catalog-block__box-title
      if type == 'test'
        a(href="#blagovoniya" data-catalog="trigger")
          span=title
          svg.icon
            use(xlink:href='./img/icons/icons.svg#caret-right')
      else 
        a(href="#")
          span=title 
          svg.icon
            use(xlink:href='./img/icons/icons.svg#caret-right')
    ul.catalog-block__box-list.list
      each val in items
        li
          if index < 4
            
            if type == 'test' && index == 1
              a(href="#tibetskie-blagovoniya" data-catalog="trigger")
                span #{val} (рабочая ссылка)
                
            else 
              a(href="#")
                span #{val}

          else 
            if type == 'test'
              a(href="#blagovoniya" data-catalog="trigger").catalog-block__more-link
                strong=val
            else 
              a(href="#").catalog-block__more-link 
                strong=val
        
        -index++

    if type == 'test'
      a(href="#blagovoniya" data-catalog="trigger").catalog-block__box-mobile-link
        each val, index in items
          if index < items.length - 2
            | #{val}, 
          else if index < items.length - 1
            | #{val} и 
          else 
            | #{val}
    else 
      a(href="#").catalog-block__box-mobile-link
        each val, index in items
          if index < items.length - 2
            | #{val}, 
          else if index < items.length - 1
            | #{val} и 
          else 
            | #{val}


mixin item(title, type)
  .catalog-block__item.col-sm-6.col-md-4.col-lg-3
    if type == 'test'
      a(href="#tibetskie-blagovoniya" data-catalog="trigger")
        span #{title} (рабочая ссылка)
        svg.icon
          use(xlink:href='./img/icons/icons.svg#caret-right')
    else 
      a(href="#")
        span #{title}
        svg.icon
          use(xlink:href='./img/icons/icons.svg#caret-right')


